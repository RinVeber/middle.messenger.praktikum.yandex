<section class="navigation">
  <nav class="navigation__block">
    <ul class="navigation__list">
      {{title}}

      {{#each routes}}
        <li class="navigation__item">
          <a
            class="navigation__button button"
            href="/{{{path}}}"
          >
            {{{title}}}
          </a>
        </li>
      {{/each}}
    </ul>
  </nav>
</section>
